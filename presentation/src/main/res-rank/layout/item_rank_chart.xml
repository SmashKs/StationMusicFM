<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_others"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.main.rank.viewholders.ChartViewHolder">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_chart"
        style="@style/Rank.CardView.ItemRank.Chart"
        tools:context=".features.main.rank.viewholders.ChartViewHolder">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_thumbnail"
            style="@style/Constraint.MatchParent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />
    </com.google.android.material.card.MaterialCardView>

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_chart"
        style="@style/Rank.TextView.ItemRank.Chart"
        android:layout_marginBottom="@dimen/md_two_unit"
        android:layout_marginTop="@dimen/md_two_unit"
        android:gravity="center"
        android:textSize="10sp"
        tools:text="@tools:sample/lorem[2]" />
</androidx.constraintlayout.widget.ConstraintLayout>
