<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kits.bottomsheet.PlaylistBottomSheetDialog">

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_to_playlist"
        style="@style/BottomSheetView.Options.ItemView"
        android:drawableStart="@drawable/ic_playlist_add_black"
        android:text="Add to Playlist"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_playlists"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:itemCount="6"
        tools:listitem="@layout/item_playlist_on_bottom_sheet"/>
</LinearLayout>
