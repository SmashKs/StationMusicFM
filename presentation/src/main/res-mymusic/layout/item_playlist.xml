<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_playlist_name"
        style="@style/MusicTextView.AnyWidth"
        android:layout_marginBottom="@dimen/md_one_unit"
        android:layout_marginEnd="@dimen/md_zero_unit"
        android:layout_marginTop="@dimen/md_one_unit"
        android:drawablePadding="@dimen/md_two_unit"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf=""
        app:layout_constraintEnd_toStartOf="@+id/ftv_number_of_tracks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableStart="@drawable/ic_cloud_download_black"
        tools:text="@tools:sample/full_names"/>

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_number_of_tracks"
        style="@style/MusicTextView"
        android:layout_width="wrap_content"
        android:drawablePadding="@dimen/md_one_half_unit"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ftv_playlist_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableEnd="@drawable/ic_arrow_right_black"
        tools:text="@tools:sample/us_phones"/>
</androidx.constraintlayout.widget.ConstraintLayout>
