<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_download"
        style="@style/MusicTextView.Bold.FitWidth"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:paddingBottom="@dimen/md_two_unit"
        android:paddingTop="@dimen/md_two_unit"
        android:text="Download"/>

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_to_favorite"
        style="@style/MusicTextView.Bold.FitWidth"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:paddingBottom="@dimen/md_two_unit"
        android:paddingTop="@dimen/md_two_unit"
        android:text="Add to Favorite"/>

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_music_info"
        style="@style/MusicTextView.Bold.FitWidth"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:paddingBottom="@dimen/md_two_unit"
        android:paddingTop="@dimen/md_two_unit"
        android:text="Info"/>
</LinearLayout>
