<FrameLayout
    style="@style/Constraint.Wrap.FitWidth"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.main.explore.viewholders.HotAlbumViewHolder">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_album"
        style="@style/Constraint.Wrap"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/md_one_unit"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_album"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_zero_unit"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars"/>

            <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
                android:id="@+id/ftv_album_name"
                style="@style/MusicTextView.AnyWidth"
                android:layout_marginBottom="@dimen/md_one_unit"
                android:layout_marginTop="@dimen/md_one_unit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_album"
                tools:text="@tools:sample/full_names"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
